<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.duquehenry.petagrammenufragments.ActividadPrincipal">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|enterAlways">
        <ImageView
            android:id="@+id/idToolbarImageViewHuella"
            android:layout_width="@dimen/actionbar_tamano_icono"
            android:layout_height="@dimen/actionbar_tamano_icono"
            android:background="@drawable/huella"/>
        <TextView
            android:id="@+id/textViewNombreApp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/actionbar_padding"
            android:paddingRight="@dimen/actionbar_padding"
            android:text="@string/app_name"
            android:gravity="center"
            android:textColor="@color/textTitle"
            android:textSize="@dimen/actionbar_tamano_icono"/>

    </android.support.v7.widget.Toolbar></android.support.design.widget.AppBarLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewMascotasRaiting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/cardview_padding_linearLayout"/>
</RelativeLayout>
